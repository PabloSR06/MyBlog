@page "/{*path}"
@inject NavigationManager? NavigationManager

<PageTitle>Pablo Suarez Romero</PageTitle>
<HeadContent>
    <meta property="og:title" content="Pablo Suarez Romero">
    <meta property="og:description" content="Small blog">
    <meta name="twitter:title" content="Pablo Suarez Romero" />
    <meta name="twitter:description" content="Small blog" />
</HeadContent>

@if (string.IsNullOrEmpty(this.Path))
{
    <div class="sectionBlock firstBlock" id="sec-1">
        <div class="container">

            <MyBlog.Components.Portrait></MyBlog.Components.Portrait>


            <a href="#blog" aria-label="go to blog">
                <div class="scroll-down"></div>
            </a>
        </div>
    </div>

    <div class="sectionBlock secondBlock" id="blog">
        <div class="">


            <MyBlog.Components.PostList></MyBlog.Components.PostList>


        </div>
    </div>
}
else
{
    <MyBlog.Components.Header></MyBlog.Components.Header>
    <MyBlog.Components.PostInfo Path="@Path"></MyBlog.Components.PostInfo>

}

@code {
    [Parameter]
    public string? Path { get; set; }

}